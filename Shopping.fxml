               <font>
                  <Font size="36.0" />
               </font>
            </Text>
            <Text layoutX="375.0" layoutY="130.0" strokeType="OUTSIDE" strokeWidth="0.0" text="You Are Shopping.">
               <font>
                  <Font size="18.0" />
               </font>
            </Text>
            <Button layoutX="65.0" layoutY="492.0" mnemonicParsing="false" onAction="#viewHome" text="Return to Home" />
            <Button layoutX="767.0" layoutY="492.0" mnemonicParsing="false" onAction="#viewCart" text="View Cart" />
            <Label fx:id="myLabel" layoutX="293.0" layoutY="200.0" text="Select What You'd Like to Buy. If You Can Afford it.">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            <ListView fx:id="myListView" editable="true" layoutX="350.0" layoutY="248.0" onEditStart="#initialize" onMouseClicked="#initialize" prefHeight="200.0" prefWidth="200.0" />
